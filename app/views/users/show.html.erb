<div class="container px-5 px-sm-0">
  <div class="row">


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_iamge(100,100) %>
            </td>
            <td>
              <%= link_to book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= book.opinion %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
